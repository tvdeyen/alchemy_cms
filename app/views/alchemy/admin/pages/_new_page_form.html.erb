<%= alchemy_form_for([:admin, page]) do |f| %>
  <%= f.hidden_field(:language_id) %>
  <%= f.hidden_field(:layoutpage) %>
  <% unless page.layoutpage %>
    <%= f.input :parent_id, input_html: { class: 'alchemy_selectbox' } %>
  <% end %>
  <%= f.input :page_layout,
    collection: @page_layouts,
    label: Alchemy.t(:page_type),
    include_blank: Alchemy.t('Please choose'),
    required: true,
    input_html: {class: 'alchemy_selectbox'} %>
  <%= f.input :name %>
  <%= f.submit Alchemy.t(:create) %>
<% end %>

<script>
  $('#page_parent_id').alchemyPageSelect({
    placeholder: "<%= Alchemy.t(:none) %>",
    url: "<%= alchemy.api_pages_path %>",
    <% if page.parent %>
    initialSelection: {
      id: <%= page.parent_id %>,
      text: "<%= page.parent.name %>"
    }
    <% end %>
  })
</script>

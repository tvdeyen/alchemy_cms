<script>
  Alchemy.routes = {

    edit_admin_essence_picture_path: function(id) {
      return '<%= alchemy.edit_admin_essence_picture_path(id: 'eid') %>'.replace(/eid/, id);
    },

    crop_admin_essence_picture_path: function(id) {
      return '<%= alchemy.crop_admin_essence_picture_path(id: 'eid') %>'.replace(/eid/, id);
    },

    admin_pictures_path: function(id) {
      return '<%= alchemy.admin_pictures_path(content_id: 'cid') %>'.replace(/cid/, id);
    },

    admin_picture_path: function(id) {
      return '<%= alchemy.admin_picture_path(id: 1) %>'.replace(/1/, id);
    },

    admin_trash_path: function(page_id) {
      var url = '<%= alchemy.admin_trash_path %>';
      if (page_id) url += '?page_id=' + page_id;
      return url;
    },

    new_admin_element_path: function(page_id) {
      var url = '<%= alchemy.new_admin_element_path %>';
      if (page_id) url += '?page_id=' + page_id;
      return url;
    },

    admin_clipboard_path: function(remarkable_type) {
      var url = '<%= alchemy.admin_clipboard_path %>';
      if (remarkable_type) url += '?remarkable_type=' + remarkable_type;
      return url;
    },

    copy_admin_element_path(id) {
      return '<%== alchemy.insert_admin_clipboard_path(
        remarkable_type: 'elements',
        remarkable_id: 'eid') %>'.replace(/eid/, id);
    },

    cut_admin_element_path(id) {
      return '<%== alchemy.insert_admin_clipboard_path(
        remarkable_type: 'elements',
        remarkable_id: 'eid', remove: true) %>'.replace(/eid/, id);
    },

    trash_admin_element_path(id) {
      return '<%= alchemy.trash_admin_element_path(id: 'eid') %>'.replace(/eid/, id);
    },

    publish_admin_element_path(id) {
      return '<%= alchemy.publish_admin_element_path(id: 'eid') %>'.replace(/eid/, id);
    },

    fold_admin_element_path: function(id) {
      return '<%= alchemy.fold_admin_element_path(id: 1) %>'.replace(/1/, id);
    },

    admin_element_path: function(id) {
      return '<%= alchemy.admin_element_path(id: 'eid') %>'.replace(/eid/, id);
    },

    list_admin_elements_path: '<%= alchemy.list_admin_elements_path %>',
    order_admin_contents_path: '<%= alchemy.order_admin_contents_path %>',
    order_admin_elements_path: '<%= alchemy.order_admin_elements_path %>',
    order_admin_pages_path: '<%= alchemy.order_admin_pages_path %>',
    link_admin_pages_path: '<%= alchemy.link_admin_pages_path %>'

  };
</script>
